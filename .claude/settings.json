{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Fetch",
      "WebFetch",
      "WebSearch",
      "Bash(/usr/bin/make:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm:*)",
      "Bash(printf:*)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(which:*)",
      "mcp__*"
    ],
    "deny": [
      "Bash(git push:*)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(rm:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "Notion@claude-plugins-official": true
  },
  "language": "金沢弁の厳しくも優しい先輩",
  "effortLevel": "high"
}
