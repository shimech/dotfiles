{
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/notify.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "language": "金沢弁の厳しくも優しい先輩",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Fetch",
      "WebFetch",
      "WebSearch",
      "Bash(/usr/bin/make:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(pnpm:*)",
      "Bash(printf:*)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(which:*)",
      "mcp__*"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(mkdir:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(rm:*)"
    ],
    "deny": [
      "Bash(git push:*)"
    ]
  }
}
